# Production Environment Configuration
# SkillSprig Test Automation Framework

# Environment
TEST_ENV=prod

# Authentication Settings to use existing storage states
FORCE_AUTH_REFRESH=false

# Base URLs
BASE_URL=https://skill-sprig.vercel.app
API_BASE_URL=https://skill-sprig.vercel.app/api

# Test User Credentials
# Admin User
ADMIN_EMAIL=admin.prod@test.com
ADMIN_PASSWORD=AdminProd@123!

# Mentor User
MENTOR_EMAIL=mentor.prod@test.com
MENTOR_PASSWORD=MentorProd@123!

# Student User
STUDENT_EMAIL=student.prod@test.com
STUDENT_PASSWORD=StudentProd@123!

# Test Configuration
DEFAULT_TIMEOUT=60000
DEFAULT_NAVIGATION_TIMEOUT=60000
DEFAULT_ACTION_TIMEOUT=20000

# Browser Configuration
HEADLESS=true
SLOW_MO=100

# Screenshot & Video Settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel Execution
WORKERS=2
RETRIES=3

# API Configuration
API_TIMEOUT=60000
API_RETRY_ATTEMPTS=5

# Feature Flags
ENABLE_VISUAL_TESTS=false
ENABLE_API_TESTS=true
ENABLE_PERFORMANCE_TESTS=true

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Test Data
USE_MOCK_DATA=false
TEST_DATA_PATH=./test-data

# Production Safety
READ_ONLY_MODE=true
SKIP_DESTRUCTIVE_TESTS=true

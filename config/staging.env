# Staging Environment Configuration
# SkillSprig Test Automation Framework

# Environment
TEST_ENV=staging

# Authentication Settings to use existing storage states
FORCE_AUTH_REFRESH=false

# Base URLs
BASE_URL=https://staging-skill-sprig.vercel.app
API_BASE_URL=https://staging-skill-sprig.vercel.app/api

# Test User Credentials
# Admin User
ADMIN_EMAIL=admin.staging@test.com
ADMIN_PASSWORD=AdminStaging@123

# Mentor User
MENTOR_EMAIL=mentor.staging@test.com
MENTOR_PASSWORD=MentorStaging@123

# Student User
STUDENT_EMAIL=student.staging@test.com
STUDENT_PASSWORD=StudentStaging@123

# Test Configuration
DEFAULT_TIMEOUT=45000
DEFAULT_NAVIGATION_TIMEOUT=45000
DEFAULT_ACTION_TIMEOUT=15000

# Browser Configuration
HEADLESS=true
SLOW_MO=0

# Screenshot & Video Settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel Execution
WORKERS=3
RETRIES=2

# API Configuration
API_TIMEOUT=45000
API_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_VISUAL_TESTS=true
ENABLE_API_TESTS=true
ENABLE_PERFORMANCE_TESTS=true

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=true

# Test Data
USE_MOCK_DATA=false
TEST_DATA_PATH=./test-data

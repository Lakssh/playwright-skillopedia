# Example Environment Configuration
# Copy this file to .env and update with your values

# Environment (dev, staging, prod)
TEST_ENV=dev

# Base URLs
BASE_URL=https://skill-sprig.vercel.app
API_BASE_URL=https://skill-sprig.vercel.app/api

# Test User Credentials
ADMIN_EMAIL=your-admin-email@test.com
ADMIN_PASSWORD=your-admin-password

MENTOR_EMAIL=your-mentor-email@test.com
MENTOR_PASSWORD=your-mentor-password

STUDENT_EMAIL=your-student-email@test.com
STUDENT_PASSWORD=your-student-password

# Test Configuration
DEFAULT_TIMEOUT=30000
DEFAULT_NAVIGATION_TIMEOUT=30000
DEFAULT_ACTION_TIMEOUT=10000

# Browser Configuration
HEADLESS=true
SLOW_MO=0

# Screenshot & Video Settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel Execution
WORKERS=4
RETRIES=1

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_VISUAL_TESTS=true
ENABLE_API_TESTS=true
ENABLE_PERFORMANCE_TESTS=false

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Test Data
USE_MOCK_DATA=false
TEST_DATA_PATH=./test-data

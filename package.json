{
  "name": "playwright-skillopedia",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright automation framework for SkillSprig application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:dev": "TEST_ENV=dev npx playwright test --grep @login",
    "test:staging": "TEST_ENV=staging npx playwright test",
    "test:prod": "TEST_ENV=prod npx playwright test",
    "test:debug": "TEST_ENV=dev npx playwright test --debug",
    "test:headed": "playwright test --headed --grep @login",
    "report": "playwright show-report",
    "report:extent": "open extent-report/index.html || xdg-open extent-report/index.html",
    "allure:report": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "framework"
  ],
  "author": "SkillSprig QA Team",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "allure-playwright": "^3.0.0",
    "axe-playwright": "^2.0.0",
    "dotenv": "^16.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.0",
    "faker": "^5.5.3",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "winston": "^3.14.0"
  }
}
